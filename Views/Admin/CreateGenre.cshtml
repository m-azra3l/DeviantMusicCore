@model DeviantMusicCore.Models.Genre

@{
    ViewData["Title"] = "Create Genre";
    Layout = "_AdminLayout";
}

<h3>Add Genre</h3>
<form method="post" action="CreateGenre">
    <div class="form-group">        
        <div class="col-12">
            <label asp-for="Name"></label>
            <br/>
            <input asp-for="Name" class="form-control" />
            <br/>
        </div>        
        <div class="form-group">
            <input type="submit" class="btn btn-success" value="Create" />
            <a asp-action="GenreList" class="btn btn-primary">Back</a>
        </div>

    </div>

</form>
