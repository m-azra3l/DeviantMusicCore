@model IEnumerable<DeviantMusicCore.Models.Genre>

@{
    ViewData["Title"] = "Genre List";
    Layout = "_AdminLayout";
}

<div class="row">
    <div class="col-6">
        <h3>Genre List</h3>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="CreateGenre">Add Genre</a>        
    </div>
    <br />
    <div class="col-12">
        <table class="table table-striped border" >
            <tr>
                <th class="text-center">Id</th>
                <th class="text-center">
                    @Html.DisplayNameFor(g => g.Name)
                </th>
                <th class="text-center">
                    Actions
                </th>
            </tr>
            @foreach(var item in Model)
            {
                <tr>
                    <td class="text-center">@Html.DisplayFor(g => item.Id)</td>
                    <td class="text-center">
                        @Html.DisplayFor(g => item.Name)
                    </td>
                    <td class="text-center">
                        <div class="btn-group" role="group">
                            <a type="button" class="btn btn-success rounded-0"  asp-action="EditGenre" asp-route-id="@item.Id"><i class="far fa-edit"></i></a>
                            <form method="post" action="DeleteGenre">
                                <button onclick="if (!confirm('Are you sure you want to delete this Item?')) { return false }" type="submit" class="btn btn-danger rounded-0 " asp-action="DeleteGenre" asp-route-id="@item.Id"><i class="far fa-trash-alt"></i></button>
                            </form>
                        </div>
                    </td>                   
                </tr>
            }

        </table>
    </div>
</div>