@page
@model EditUserModel

@{
    ViewData["Title"] = "Edit User";
    Layout = "_AdminLayout";
}

<h3>Edit User</h3>
<form method="post" enctype="form-data">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-md-6">
        <label asp-for="Input.UserName"></label>
        <input asp-for="Input.UserName" class="form-control" disabled />
        </div>
        <br/>
        <div class="col-md-6">
            <label>Stage Name</label>
            <Input asp-for="Input.StageName" class="form-control" />
        </div>
        <br/>
        <div class="col-md-6">
            <label>Designation</label>
            <Input asp-for="Input.Designation" class="form-control" />
        </div>
        <div class="col-md-6">
                    <label>Type</label>
                    <div class="col-md-10">
                        <label asp-for="Input.IsArtiste">
                            <input type="checkbox" asp-for="Input.IsArtiste"/> Artiste    
                        </label> 
                        <label asp-for="Input.IsTeam">
                            <input type="checkbox" asp-for="Input.IsTeam"/> Team Member
                        </label> 
                    </div> 
        </div> 
    </div>
    <br />
    <div class="form-group">
        <input type="submit" class="btn btn-success" value="Update" />
        <a asp-controller="Admin" asp-action="UsersList" class="btn btn-primary">Back</a>
    </div>
</form>
