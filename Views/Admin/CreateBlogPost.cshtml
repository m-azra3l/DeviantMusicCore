@model DeviantMusicCore.Models.BlogItem

@{
    ViewData["Title"] = "Create Blog Post";
    Layout = "_AdminLayout";
}
<h3>Create Blog Post</h3>
<form method="post" enctype="multipart/form-data" class="container-fluid" asp-action="CreateBlogPost">
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-md-12">
            <label>Category</label>
            <select asp-for="CategoryId" asp-items="ViewBag.CategoryId" class="form-control text-center"><option value="">--Select Category--</option></select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
            <br/>
            <label>Title</label>
            <Input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
            <br/>
            <label>Post Url(Title and replace any space with underscore("_"))</label>
            <Input asp-for="BlogItemUrl" class="form-control" />
            <span asp-validation-for="BlogItemUrl" class="text-danger"></span>
            <br/>
            <label>Image(less than 512kb</label>
            <input type="file" name="PostImage" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" class="form-control"/>
            <br/>
            <label>Article</label>
            <textarea asp-for="Article" rows="20"></textarea>
            <span asp-validation-for="Article" class="text-danger"></span>
            <br />
            <input type="submit" class="btn btn-success" value="Create" />
            <input type="button" value="Back" onclick="window.history.back();" class="btn btn-primary"/>
        </div>
    </div>
</form>