@model DeviantMusicCore.Models.ProductLicense

@{
    ViewData["Title"] = "Edit License";
    Layout = "_AdminLayout";
}

<h3>Edit License</h3>
<form method="post" action="EditLicense">    
    <div class="form-group">
        <div class="col-12">
            <label asp-for="License"></label>
            <br/>
            <input asp-for="License" class="form-control" />
            <br/>
        </div>
       <div class="form-group">
            <input type="submit" class="btn btn-success" asp-route-id="@Model.Id" value="Update" />
            <a asp-action="LicenseList" class="btn btn-primary">Back</a>
        </div>
    </div>
</form>