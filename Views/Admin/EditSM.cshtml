@model DeviantMusicCore.Models.Social

@{
    ViewData["Title"] = "Edit SM";
    Layout = "_AdminLayout";
}
<h3>Edit Social Media Link</h3>
<form method="post" enctype="multipart/form-data" asp-action="EditSM"> 
    <div asp-validation-summary="All" class="text-danger"></div>  
    <div class="form-group row">
        <div class="col-md-12">
            <label>Name</label>
            <Input asp-for="SMName" class="form-control" />
            <span asp-validation-for="SMName" class="text-danger"></span>
        
            <label>Url</label>
            <Input asp-for="Url" class="form-control" />
            <span asp-validation-for="Url" class="text-danger"></span>

            <label>Image(less than 2kb</label>
            <input type="file" name="ImageUrl" id="fileUpload" accept=".png,.jpg,.jpeg,.gif,.tif" class="form-control"/>
            <br/>
            <input type="submit" class="btn btn-success" value="Update" />
            <a asp-action="SMList" class="btn btn-primary">Back</a>
        </div>
    </div>
</form>
