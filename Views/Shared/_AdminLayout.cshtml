

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <title>@ViewData["Title"] - Deviant Music</title>
        <partial name="_Styles" />
        <style>
            .nav li{
                display: inline-block;
            }
            .navbar-right{
                position: absolute;
                right: 3px;
            }
            #navigationBar{overflow: hidden;}
            .sticky{position: fixed; top:0;width:100%;}
            .sticky + .content {padding-top: 10px;}
            #myBtn {
                display: none; /* Hidden by default */
                position: fixed; /* Fixed/sticky position */
                bottom: 0;/* Place the button at the bottom of the page */
                right: 0; /* Place the button 30px from the right */
                z-index: 99;/* Make sure it does not overlap */
                border:none; /* Remove borders */
                outline: none; /* Removeoutline */
                background-color: transparent; /* Set a background color */
                color: #189ddb;/* Text color */
                cursor: pointer; /* Add a mouse pointer on hover */
                padding:10px;/* Some padding */
                border-radius: 10px; /* Rounded corners */
                font-size:20px; /* Increase font size */
                width: 50px;
            }
  
            #myBtn:hover {
            background-color: #189ddb; 
            color: white;/* Text color */
            }
        </style>
    </head>
    <body>
        <button onclick="topFunction()" id="myBtn" title="Top"><i class="fas fa-angle-up" style="size: 7x;"></i></button>
            <partial name="_Header" />
            <div class="container" style="margin-top: 100px;">
                <main role="main" class="container body-content" style="min-height: 100vh;">
                    <h2>Manage</h2>
                    <hr/>
                    <div class="row">
                        <div class="col-md-3">
                            <br/>
                            <partial name="/Areas/Identity/Pages/Account/Manage/_ManageNav.cshtml" /> 
                        </div>
                        <div class="col-md-9">
                            <br/>
                            @RenderBody()
                        </div>
                    </div>
                </main>
            </div>
            <partial name="_Footer" />
            <partial name="_Scripts" />
        @await RenderSectionAsync("Scripts", required: false)
        <script>
            tinymce.init({selector:'textarea',
                          plugins: 'link, image, media',
                          toolbar: 'undo redo | styleselect | bold italic underline striketrhough blockquote forecolor backcolor | alignleft aligncenter alignright alignjustify | outdent indent | removeformat help',
                          menubar: true});

            window.onscroll = function(){myFunction();scrollFunction();};

            var navbar = document.getElementById("navigationBar");
            var sticky = navbar.offsetTop;

            function myFunction(){
                if(window.pageYOffset >= sticky){
                    navbar.classList.add("sticky")
                }
                else{
                    navbar.classList.remove("sticky");
                }
            }
            
            var mybutton = document.getElementById("myBtn");
            function scrollFunction() {
                if (document.body.scrollTop > 20 ||document.documentElement.scrollTop > 20) {
                    mybutton.style.display = "block";
                } 
                else {
                    mybutton.style.display= "none";
                }
            }

            // When the user clicks on thebutton, scroll to the top of the document
            function topFunction() {
                document.body.scrollTop = 0; // For Safari
                document.documentElement.scrollTop = 0; // For Chrome, Firefox, IE and Opera
            }
        </script>  
    </body>
</html>