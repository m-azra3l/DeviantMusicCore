@model DeviantMusicCore.Models.Beat

@{
    ViewData["Title"] = "Attach Beat";
    Layout = "_AdminLayout";
}
<h3> Attach Beat</h3>
<form method="post" enctype="multipart/form-data" class="container-fluid" asp-action="AttachBeat">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-md-12">
            <label>Title: </label>@Model.Title
            <label>Audio(less than 8mb, MP3 only)</label>
            <input type="file" name="AudioFile" id="fileUpload1" accept=".mp3,.zip,.rar" class="form-control"/>
            <br/>
            <input type="submit" class="btn btn-success" value="Attach" />
            <a asp-action="BeatList" class="btn btn-primary">Back</a>
        </div>
    </div>
</form>