@page
@model LoginWithRecoveryCodeModel
@{
    ViewData["Title"] = "Recovery code verification";
    Layout = "/Views/Shared/_LoginLayout.cshtml";
}

<div class="text-center">
<h1 class="h4 text-gray-900 mb-4">@ViewData["Title"]</h1>
<hr />
<p>
    You have requested to sign in with a recovery code. This login will not be remembered until you provide
    an authenticator app code at sign in or disable 2FA and sign in again.
</p>
</div>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.RecoveryCode"></label>
                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" />
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Sign In</button>
        </form>

