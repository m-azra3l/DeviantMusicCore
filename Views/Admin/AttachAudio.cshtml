@model DeviantMusicCore.Models.Product

@{
    ViewData["Title"] = "Attach Audio";
    Layout = "_AdminLayout";
}
<h3> Attach Audio</h3>
<form method="post" enctype="multipart/form-data" class="container-fluid" asp-action="AttachAudio">
    <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <div class="col-md-12">
            <label>Title:</label> @Model.Title
            <br/>
            <label>Audio(less than 5mb, MP3 only)</label>
            <input type="file" name="AudioFile" id="fileUpload1" accept=".mp3" class="form-control"/>
            <br/>
            <input type="submit" class="btn btn-success" value="Attach" />
            <input type="button" value="Back" onclick="window.history.back();" class="btn btn-primary"/>
        </div>
    </div>
</form>